<style>
        body {
            background-color: #f4f4f4;
            color: #333;
        }
        .search-section {
            padding: 60px 20px;
            text-align: center;
            background-color: #f9f9f9;
        }
        .search-title {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 30px;
        }
        .search-form {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }
        .search-input, .search-select, input[type="number"], input[type="date"] {
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .search-input {
            width: 300px;
        }
        .search-select, input[type="number"] {
            width: 150px;
        }
        .btn-search {
            padding: 10px 20px;
            background-color: #ff6600;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .btn-search:hover {
            background-color: #e65c00;
        }
        /* Swiper Styles */
        .available-tours {
            padding: 50px 20px;
            background-color: white;
            text-align: center;
        }
        .section-title {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 40px;
        }
        .featured-tours-slider {
            padding: 40px 0;
        }
        .swiper-wrapper {
            display: flex;
        }
        .swiper-slide {
            width: auto;
            display: flex;
            justify-content: center;
        }
        .swiper-button-next, 
        .swiper-button-prev {
            color: #333;
            font-size: 1.5rem;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            padding: 10px;
        }
        .swiper-button-next:hover, 
        .swiper-button-prev:hover {
            background-color: #ddd;
        }
        .tour-card {
            background-color: #fff;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            width: 100%;
            max-width: 350px;
            transition: transform 0.3s ease;
        }
        .tour-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .tour-card-body {
            padding: 20px;
        }
        .tour-title {
            font-size: 1.8rem;
            margin-bottom: 10px;
        }
        .tour-description {
            font-size: 1.1rem;
            color: #777;
            margin-bottom: 15px;
        }
        .tour-price {
            font-size: 1.4rem;
            color: #ff6600;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .btn {
            background-color: #ff6600;
            color: white;
            padding: 10px 20px;
            border-radius: 30px;
            font-size: 1rem;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .btn:hover {
            background-color: #e65c00;
        }
        .tour-card:hover {
            transform: translateY(-10px);
        }
    </style>
<body>
    <!-- Tour Search Section -->
    <section class="search-section">
        <h1 class="search-title">Find Your Perfect Tour</h1>
        <form id="search-form" class="search-form" action="/search" method="get">
            <input type="text" name="q" placeholder="Enter destination or tour type" class="search-input">
            <select name="level" class="search-select">
                <option value="">Select Level</option>
                <option value="Easy">Easy</option>
                <option value="Medium">Medium</option>
                <option value="Hard">Hard</option>
            </select>
            <input type="date" name="startDate" class="search-input">
            <input type="date" name="endDate" class="search-input">
            <input type="range" name="price" min="5000000" max="20000000" class="search-input" step="500000" onchange="this.nextElementSibling.value = this.value">
            <output>10,000,000</output>
            <button type="submit" class="btn-search">Search</button>
        </form>
    </section>
    <!-- Available Tours Section -->
   <section class="available-tours">
    <h2 class="section-title">Available Tours</h2>
    <div class="swiper featured-tours-slider">
        <div class="swiper-wrapper">
            {{#if tours.length}}
                {{#each tours}}
                <div class="swiper-slide">
                    <div class="tour-card">
                        <img src="{{this.image}}" alt="{{this.name}}">
                        <div class="tour-card-body">
                            <h2 class="tour-title">{{this.name}}</h2>
                            <p class="tour-description">{{this.description}}</p>
                            <div class="tour-price">${{this.price}}</div>
                            <button class="btn add-to-cart" 
                                    data-id="{{this._id}}" 
                                    data-name="{{this.name}}" 
                                    data-price="{{this.price}}" 
                                    data-img="{{this.image}}">
                                    Add to Cart
                            </button>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <p>No tours found matching your criteria.</p>
            {{/if}}
        </div>
        <!-- Navigation buttons -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</section>
<script>
    new Swiper('.featured-tours-slider', {
        slidesPerView: 3,
        spaceBetween: 20,
        loop: true,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        breakpoints: {
            640: { slidesPerView: 1 },
            768: { slidesPerView: 2 },
            1024: { slidesPerView: 3 },
        },
    });
</script>

</body>

