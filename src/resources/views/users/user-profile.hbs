<style>
main {
    background-color: #f9f9f9;
    color: #333;
    text-align: center;
    padding: 20px;
}

/* Header styling */
h1 {
    margin-top: 120px;
    margin-bottom: 20px;
    font-size: 2.5rem;
    color: #444;
}

.profile-actions {
    display: grid;
    grid-template-columns: repeat(2, 1fr);  
    gap: 20px;
    margin-bottom: 40px;
    justify-items: center; 
    grid-template-columns: repeat(2, 200px); 
    justify-content: center;
    margin: 0 auto; 
}

.action {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    width: 180px;  
    padding: 15px;
    text-align: center;
    transition: transform 0.3s ease;
}

.action:hover {
    transform: translateY(-5px);
}

.action img {
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
}

.action p {
    font-size: 1rem;
    font-weight: bold;
    color: #444;
}

.logout-button {
    padding: 15px 30px;  
    background: #dc3545;
    color: white;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background 0.3s ease;
    margin-top: 30px;
    grid-column: span 2;  
    font-size: 1.2rem;  
    display: block; 
    margin-left: auto;  
    margin-right: auto;
    margin-bottom: 80px;  
}

.logout-button:hover {
    background: #c82333;
}

@media (max-width: 768px) {
    .profile-actions {
        grid-template-columns: 1fr; 
        gap: 10px; 
    }

    .logout-button {
        font-size: 1.1rem;
        padding: 12px 25px; 
    }
}

</style>
      
 <main>
        <h1>User Profile</h1>
        <section class="profile-actions">
            <div class="action">
                <a href="profile/my-orders">
                    <img src="https://via.placeholder.com/50" alt="My Orders">
                    <p>My Orders</p>
                </a>
            </div>
            <div class="action">
                <a href="profile/history">
                    <img src="https://via.placeholder.com/50" alt="Order History">
                    <p>Order History</p>
                </a>
            </div>
            <div class="action">
                <a href="profile/update-profile">
                    <img src="https://via.placeholder.com/50" alt="Update Profile">
                    <p>Update Profile</p>
                </a>
            </div>
            <div class="action">
                <a href="profile/recharge-wallet">
                    <img src="https://via.placeholder.com/50" alt="Wallet">
                    <p>Wallet</p>
                </a>
            </div>
        <button class="logout-button" onclick="window.location.href='/v1/auth/logout'">Logout</button>
    </main>

