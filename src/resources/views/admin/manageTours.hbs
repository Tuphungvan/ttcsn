<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Tours</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Manage Tours</h1>
        <a href="/admin/create-tour" class="btn btn-primary mb-3">Create New Tour</a>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th> <!-- Thêm cột số thứ tự -->
                    <th>Name</th>
                    <th>Level</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each tours}}
                    <tr>
                        <td>{{add @index 1}}</td> <!-- Đánh số thứ tự -->
                        <td>{{this.name}}</td>
                        <td>{{this.level}}</td>
                        <td>{{this.price}}</td>
                        <td>
                            <a href="/admin/edit-tour/{{this._id}}" class="btn btn-warning">Edit</a>
                            <form action="/admin/delete-tour/{{this._id}}" method="POST" style="display:inline;">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
